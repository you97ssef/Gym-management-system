@model IEnumerable<Gym_Core.Models.Membre>

@{
    ViewData["Title"] = "Index";
}

<h1>Les Membres</h1>

<p>
    <a class="badge badge-pill badge-primary" asp-action="Create">Create New Member</a>
</p>
<table class="table text-light">
    <thead>
        <tr>
            <th>
                Nom Membre
            </th>
            <th>
                Prenom Membre
            </th>
            <th>
                Date de naissance
            </th>
            <th>
                Contact Membre
            </th>
            <th>
                Date jointure
            </th>
            <th>
                Groupe
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomMembre)
            </td>
            <td>
                @item.DatenaissanceMembre.Value.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactMembre)
            </td>
            <td>
                @item.DatejointureMembre.Value.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupeNavigation.NomGroupe)
            </td>
            <td>
                <a class="badge badge-pill badge-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="badge badge-pill badge-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="badge badge-pill badge-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
