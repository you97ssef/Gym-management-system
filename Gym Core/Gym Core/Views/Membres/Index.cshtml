@model IEnumerable<Gym_Core.Models.Membre>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatenaissanceMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatejointureMembre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatenaissanceMembre.Value.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactMembre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatejointureMembre.Value.ToShortDateString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupeNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
