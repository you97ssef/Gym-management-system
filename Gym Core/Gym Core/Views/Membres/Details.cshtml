@model Gym_Core.Models.Membre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Membre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomMembre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomMembre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrenomMembre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrenomMembre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatenaissanceMembre.Value.ToShortDateString())
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatenaissanceMembre.Value.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactMembre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactMembre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatejointureMembre.Value.ToShortDateString())
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatejointureMembre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GroupeNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupeNavigation.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



<hr />

<div>
    <h2> Payement de membre </h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Date payement
                </th>
                <th>
                    Montant de payement
                </th>
                <th>
                    Description de payement
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatePayement.Value.ToShortDateString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontantPayement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionPayement)
                    </td>
                    <td>
                        <a asp-controller="Payements" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Payements" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Payements" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>