@model Gym_Core.Models.Membre

@{
    ViewData["Title"] = "Details";
}

<h1>Details Membre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomMembre)
        </dd>
        <dt class="col-sm-2">
            Prenom 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrenomMembre)
        </dd>
        <dt class="col-sm-2">
            Date de naissance
        </dt>
        <dd class="col-sm-10">
            @Model.DatenaissanceMembre.Value.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Contact
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactMembre)
        </dd>
        <dt class="col-sm-2">
            Date jointure
        </dt>
        <dd class="col-sm-10">
            @Model.DatejointureMembre.Value.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Groupe
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GroupeNavigation.NomGroupe)
        </dd>
    </dl>
</div>
<div>
    <a class="badge badge-pill badge-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="badge badge-pill badge-light" asp-action="Index">Back to List</a>
</div>



<hr />

<div>
    <h2> Payements de membre </h2>

    <table class="table text-light">
        <thead>
            <tr>
                <th>
                    Date payement
                </th>
                <th>
                    Montant de payement
                </th>
                <th>
                    Description de payement
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payements)
            {
                <tr>
                    <td>
                        @item.DatePayement.Value.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MontantPayement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DescriptionPayement)
                    </td>
                    <td>
                        <a class="badge badge-pill badge-warning" asp-controller="Payements" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="badge badge-pill badge-info" asp-controller="Payements" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="badge badge-pill badge-danger" asp-controller="Payements" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>