@model Gym_Core.Models.Groupe 
@{
    ViewData["Title"] = "Details";
}

<h1>Details Groupes</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nom
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomGroupe)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescriptionGroupe)
        </dd>
    </dl>
</div>
<div>
    <a class="badge badge-pill badge-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="badge badge-pill badge-light" asp-action="Index">Back to List</a>
</div>

<hr />

<div>
    <h2> Membres de groupe </h2>

    <table class="table text-light">
        <thead>
            <tr>
                <th>
                    Nom Membre
                </th>
                <th>
                    Prenom Membre
                </th>
                <th>
                    Date de naissance
                </th>
                <th>
                    Contact
                </th>
                <th>
                    Date Jointure
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Membres)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomMembre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrenomMembre)
                    </td>
                    <td>
                        @item.DatenaissanceMembre.Value.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactMembre)
                    </td>
                    <td>
                        @item.DatejointureMembre.Value.ToShortDateString()
                    </td>
                    <td>
                        <a class="badge badge-pill badge-warning" asp-controller="Membres" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="badge badge-pill badge-info" asp-controller="Membres" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="badge badge-pill badge-danger" asp-controller="Membres" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>